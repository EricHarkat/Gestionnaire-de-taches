<div class="container mt-5">
    <h1>Projects</h1>

    <%= link_to 'New Project', new_project_path %>

    <% if @projects.any? %>

    <ul class="list-group">
        <% @projects.each do |project| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    <%= link_to project.title, project_path(project) %>
                </span>
                <span>
                    <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-secondary btn-sm' %>
                    <%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                </span>
            </li>
        <% end %>
    </ul>
    <% else %>
        <p>No projects found. Add a new project to get started!</p>
    <% end %>
</div>